
# Configure package resolution for ARM64 musl environment
target_platform=linux
target_arch=arm64
target_libc=musl

# Prefer JS implementations over native binaries
prefer-offline=false
package-lock=false

# Skip problematic packages
optional=false

# Use registry that supports ARM64
registry=https://registry.npmjs.org/

# Bypass integrity checks for problematic WASM packages
unsafe-perm=true

# Configure for Alpine Linux / musl libc
python=/usr/bin/python3
